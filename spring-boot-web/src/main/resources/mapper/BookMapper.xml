<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="demo.springboot.mapper.BookMapper">
    <resultMap id="BaseResultMap" type="demo.springboot.domain.Book">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="writer" property="writer" />
        <result column="introduction" property="introduction" />
    </resultMap>


    <sql id="Base_Column_List">
        id, name, writer, introduction
    </sql>

    <insert id="insert">
      insert into book (name, writer, introduction)
      values (#{name,jdbcType=VARCHAR},
      #{writer,jdbcType=VARCHAR}, #{introduction,jdbcType=VARCHAR})
    </insert>
    
    <update id="update">
      UPDATE BOOK SET NAME = #{name},WRITER = #{writer},INTRODUCTION = #{introduction} WHERE id = #{id}
    </update>
    
    <delete id="delete">
        DELETE FROM BOOK WHERE id = #{id}
    </delete>

    <select id="findById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from book
        where id = #{id}
    </select>

    <select id="selectBookList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from book
    </select>
</mapper>
